<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_marginLeft="25dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/tochka" />
            <View
                android:layout_marginTop="50dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="bottom|start"
                android:background="@drawable/tochka2" />
            <View
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="left"
                android:background="@drawable/tochka" />
        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/logoImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/icon_onboarding" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tochka2" />
            <View
                android:layout_marginTop="50dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/tochka2" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/OnboardTitle2"
        android:textColor="#222222"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"/>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/Onboard2"
        android:textAlignment="center"
        android:textColor="#777777"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:id="@+id/progressDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <View
            android:id="@+id/dot2"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/indicator_nonactive" />

            <View
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:id="@+id/dot1"
                android:layout_width="62dp"
                android:layout_height="18dp"
                android:background="@drawable/indicator_active" />


            <View
                android:id="@+id/dot3"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/indicator_nonactive" />
        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_marginTop="80dp"
        android:id="@+id/nextButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_btn"
        android:src="@drawable/arrow_next"
        android:gravity="center"
        android:text=""
        android:layout_gravity="bottom|right"/>
</LinearLayout>